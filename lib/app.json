{
  "app_id": "magento",
  "name": "Magento",
  "color": "#F16423",
  "description": {
    "pt_BR": "Magento é uma plataforma CMS de gestão de loja virtual líder em seu segmento.",
    "en": ""
  },
  "api_base_uri": {
    "production": {
			"uri": "{site}/api/v2_soap?wsdl",
			"label": "Produção",
			"default": true
		}
  },
  "authentication": {
    "type": "pass_through_query_string",
    "fields": [
      {
        "name": "site",
        "label": "Site Completo (https://seusite.com)",
        "type": "text"
      },
      {
        "name": "api_user",
        "label": "API Username",
        "type": "text"
      },
      {
        "name": "api_key",
        "label": "API Key",
        "type": "password"
      }
    ]
  }
}
